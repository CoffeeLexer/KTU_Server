<%
let id = url.split('/')[1]
let data = await db.query(`SELECT * FROM system.dish WHERE id ='${id}'`)
element = data[0]
%>
<div class="news_item">
    <form method="post">
        <textarea name="name" class="simple" style="resize: vertical; width: 100%;"><%=element['name']%></textarea>
        <textarea name="description" class="simple" style="resize: vertical; width: 100%;"><%=element['description']%></textarea>
        <input type="number" pattern="[0-9]+([\.,][0-9]+)?" step="0.01" name="price" class="simple" style="resize: vertical; width: 100%;" value="<%=element['price'].toFixed(2)%>">
        <hr>
        <div style="width: 100%; text-align: right">
            <input type="submit" value="Patvirtinti">
            <button type="button" class="simple" onclick="redirect('/dish/<%=id%>')" >
                At≈°aukti
            </button>
        </div>
    </form>
</div>
