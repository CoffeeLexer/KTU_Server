<div class="news_item">
    <form method="post">
        <label>Pavadinimas</label>
        <textarea name="name" class="simple" style="resize: vertical; width: 100%;"></textarea>
        <label>Apibūdinimas</label>
        <textarea name="description" class="simple" style="resize: vertical; width: 100%;"></textarea>
        <label>Kaina</label>
        <input type="number" pattern="[0-9]+([\.,][0-9]+)?" step="0.01" name="price" class="simple" style="resize: vertical; width: 100%;">
        <hr>
        <div style="width: 100%; text-align: right">
            <input type="submit" value="Pridėti">
            <button type="button" class="simple" onclick="redirect('/dish_list')" >
                Atšaukti
            </button>
        </div>
    </form>
</div>
